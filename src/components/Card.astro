---
const { title, text, btnText } = Astro.props;
---

<div class="card">
  <div class="card-text">
    <h2>{title}</h2>
    <p>{text}</p>
  </div>
  <button class="btn">{btnText}</button>
</div>

<style>
  .card {
    background-color: rgba(38, 38, 38, 0.9);
    color: var(--secondary-color1);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2.8rem;
    border-radius: 20px;
  }
</style>
