<nav class="navbar">
  <div class="nav-container">
    <a href="#" class="logo">AskExperts</a>

    <ul class="nav-links">
      <li><a href="#">Home</a></li>
      <li><a href="#">About</a></li>
      <li><a href="#">Team</a></li>
      <li><a href="#">Case Study</a></li>
    </ul>

    <a href="#" class="login">Login</a>

    <button class="menu-toggle" aria-label="Toggle menu"> â˜° </button>
  </div>
</nav>

<style>
  .navbar {
    background-color: var(--primary-color3);
    backdrop-filter: blur(10.5px);
    position: relative;
  }

  .nav-container {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    position: relative;
    padding: 2.3rem;
    color: var(--secondary-color2);
  }

  .logo {
    font-size: 1.5rem;
    font-family: "Cabin", sans-serif;
    text-decoration: none;
    color: var(--secondary-color2);
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
    padding-left: 0px;
  }

  .nav-links li {
    list-style: none;
  }

  .nav-links a {
    color: var(--secondary-color2);
    text-decoration: none;
    font-family: "Lato", sans-serif;
  }

  .login {
    background-color: var(--primary-color1);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    color: var(--primary-color3);
    text-decoration: none;
  }

  .menu-toggle {
    display: none;
    font-size: 2rem;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--secondary-color2);
  }

  @media (max-width: 600px) {
    .nav-container {
      display: flex;
      justify-content: space-between;
    }

    .login {
      order: 1;
    }

    .logo {
      order: 2;
      text-decoration: none;
      color: var(--secondary-color2);
    }

    .menu-toggle {
      display: block;
      order: 3;
    }

    .nav-links {
      position: absolute;
      top: 100%;
      right: -2.5%;
      background-color: var(--primary-color3);
      width: 100%;
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
      display: none;
    }

    .nav-links.active {
      display: flex;
      width: 20%;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggle = document.querySelector(".menu-toggle");
    const navLinks = document.querySelector(".nav-links");

    if (toggle && navLinks) {
      toggle.addEventListener("click", () => {
        navLinks.classList.toggle("active");
      });
    }
  });
</script>
